<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击触发LiveData改变"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/changeViewModel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击触发ViewModel改变"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change" />

    <TextView
        android:id="@+id/viewModelContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ViewModel的结果"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeViewModel" />

    <TextView
        android:id="@+id/viewModelAndroidContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ViewModel的结果"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewModelContent" />

    <Button
        android:id="@+id/changeViewModelLiveData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击触发ViewModelLiveData改变"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewModelAndroidContent" />

    <TextView
        android:id="@+id/viewModelLiveDataContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ViewModelLiveData的结果"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeViewModelLiveData" />

    <Button
        android:id="@+id/toDataBindingActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转DataBinding操作页面"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewModelLiveDataContent" />

    <Button
        android:id="@+id/toRoomPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="跳转Room操作页面"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toDataBindingActivity" />

</androidx.constraintlayout.widget.ConstraintLayout>