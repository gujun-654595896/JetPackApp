<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <Button
        android:id="@+id/toPositionalDataSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PositionalDataSource" />

    <Button
        android:id="@+id/toPageKeyedDataSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PageKeyedDataSource" />

    <Button
        android:id="@+id/toItemKeyedDataSource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ItemKeyedDataSource" />

</LinearLayout>